<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_student_indicators"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    >

    <TextView
        android:id="@+id/student_sms_count"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:alpha="0.5"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_sms_indicator_black_16dp"
        android:duplicateParentState="false"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="0"
        android:textColor="@color/color_text_secondary"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_sms_indicator_black_16dp" />


    <TextView
        android:id="@+id/student_call_count"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/student_sms_count"
        android:alpha="0.5"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_call_indicator_black_16dp"
        android:duplicateParentState="false"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="0"
        android:textColor="@color/color_text_secondary"
        android:textSize="12sp"
        android:layout_toLeftOf="@id/student_sms_count"
        android:drawableLeft="@drawable/ic_call_indicator_black_16dp" />

</RelativeLayout>